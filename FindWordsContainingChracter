class Solution {
public:
    vector<int> findWordsContaining(vector<string>& words, char x) {
        vector<int>result;
        for(int i = 0;i<words.size();i++)
        {
            if(words[i].find(x)!=string::npos)//ei line ta index dia dibe
            {
                result.push_back(i);
            }
        }
        return result;
    }
};
//string ::npos ta string er sesh porjnto check kore kotogula omil ase seta ber kore..and !npos mil ase seta dekhabe.
